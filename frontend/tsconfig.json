{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2024"],
    "types": ["node", "vite/client"],
    "module": "es2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "outDir": "dist",
    "rootDir": "app",
    "composite": true,
    "verbatimModuleSyntax": true
  },
  "include": ["**/*", "client/.react-router/types/**/*"]
}
